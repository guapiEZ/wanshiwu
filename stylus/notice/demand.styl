body
  background-color #efeff4
  font-family SimHei
.tab_box
  height 42px
  background-color #fff
  padding-top 8px
.tab_bar
  display flex
  width  80%
  height 30px
  margin 0
  padding 0
  margin 0 auto
  list-style none
  border-radius 5px
  border 1px solid #ea5404
  color #ea5404
  .tab_bar-cell
    flex 1
    line-height 30px
    text-align center
    &:after
      content ''
      display block
      width 1px
      height 30px
      background-color #ea5404
      float right
    &:last-child:after
      content ''
      display none
    &.active
      background-color #ea5404
      color #fff

.demand_cells
  padding 0 12px
  .demand_cell
    margin-top 10px
    width 100%
    min-height 130px
    border-radius  5px
    box-shadow 0 0 1px 1px #e0e0ea
    background-color #fff
    .demand-title
      position relative
      width 100%
      display flex
      height 30px
      &:after
        content ''
        display block
        height 8px
        width 100%
        position absolute
        background url("../../img/content_list_border.9@2x.png") no-repeat
        background-size 100% 50%
        bottom -10px
        left 0
      .d-t-name
        flex 1
        padding 10px 10px
      .d-t-tag
        display inline-block
        width 44px
        height 16px
        margin 7px 0
        padding 3px 5px
        border-radius 5px
        background-color #15b755
        color #ffffff
        margin-right 12px
        line-height 16px
        text-align center
        font-style normal
        font-size 12px
      .color2
        background-color #0193e6
      .color3
        background-color #97b715
      .color4
        background-color #ea5404

    .demand-info
      font-size 15px
      margin 0
      padding 10px
      line-height 1.2em
    .demand-footer
      display flex
      height 30px
      line-height 30px
      width 100%
      .btn-detail
        width 100px
        line-height 16px
        padding 5px 0
        border-radius 5px
        border 1px solid #e1e1e1
        background-color #efeff4
        color #646464
        text-align center
        margin 0 auto
      .footer-time
        flex 1
        font-style normal
        text-align right
        font-size 14px




