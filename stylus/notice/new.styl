body
  background-color #efeff4
  font-family SimHei
.tab_box
  height 42px
  background-color #fff
  padding-top 8px
.tab_bar
  display flex
  width  80%
  height 30px
  margin 0
  padding 0
  margin 0 auto
  list-style none
  border-radius 5px
  border 1px solid #ea5404
  color #ea5404
  .tab_bar-cell
    flex 1
    line-height 30px
    text-align center
    &:after
      content ''
      display block
      width 1px
      height 30px
      background-color #ea5404
      float right
    &:last-child:after
      content ''
      display none
    &.active
      background-color #ea5404
      color #fff

.news_cells
  padding 0 12px
  .news_cell
    margin-top 10px
    width 100%
    min-height 120px
    border-radius  5px
    box-shadow 0 0 1px 1px #e0e0ea
    background-color #fff
    .news-title
      padding 0 0 4px
      position relative
      width 100%
      display flex
      height 30px
      border-bottom 1px solid #d6d7dc
      .n-t-name
        flex 1
        padding 10px 10px
    .news-info
      font-size 15px
      margin 0
      padding 10px 10px 0 10px
      color #646464
    .news-footer
      text-align right
      font-size 15px
      color #646464
      margin 0
      padding 0 10px