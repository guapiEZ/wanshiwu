@import "../header.styl"

.block_box
  display flex
  padding 12px
  background-color #ffffff
  margin-top 5px
  .img_box
    flex 3
    background url("../../img/content_img_list@2x.png") no-repeat center
    background-size 128px 90px
  .info_box
    flex 5
    padding 5px 10px
    width 100%
    .info-title
      font-size 21px
      &:after
        content '08/07'
        display block
        width 40px
        line-height 26px
        height 26px
        float right
        font-size 12px




    .info-address
      font-size 14px
      line-height 25px
      color #646464
    .info-tag_box
      span
        border 1px solid #ea5404
        border-radius 5px
        display block
        color #ea5404
        font-size 14px
        width 4em
        padding 3px 8px
    .info-price
      font-size 12px
      color #727272
      line-height 25px
      em
        font-style normal
        color #ea5404
        font-size 20px
      .price-text
        text-align right
        display inline-block
        width 55%