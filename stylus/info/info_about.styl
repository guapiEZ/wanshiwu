@import "../header.styl"

.info_banner
  padding 44px 0
  width 100%
  .info_logo
    margin 0 auto
    width 74px
    height 74px
    background transparent url("../../img/content_img_logo@2x.png") no-repeat center
    background-size cover
  .logo_bottom
    display flex
    width 40%
    margin 0 auto
    margin-top 11px
    .bottom_pic
      flex 2
      width 71px
      height 20px
      background transparent url("../../img/content_text_logo@2x.png") no-repeat center
      background-size 80%
    .bottom_text
      display inline-block
      font-size 13px
      line-height 1em
      flex 1

.about_cell
  margin-top 11px
  display flex
  padding 18px
  padding-right 32px
  background url("../../img/content_list_icon_right@2x.png") no-repeat right 10px center
  background-size 10px
  background-color #ffffff
  .cell_text
    flex 1
  .cell_tel
    flex 1
    text-align right
    font-size 15px
    color #646464




