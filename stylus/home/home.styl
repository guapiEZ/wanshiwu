@import '../header.styl'

.header
  position absolute
  top 0
  z-index 5
  width 100%
  color #ffffff
  background transparent url("../../img/banner_img_shadow@2x.png") no-repeat center
  background-size cover
  border 0
  .icon-back
    width 65px
    padding-left 15px
    background transparent url("../../img/nav_icon_down@2x.png") no-repeat left 50px center
    background-size 12px 6px
    line-height 50px
    font-style normal
  .header_title
    padding-right 80px

.search_box
  position absolute
  top 50px
  right 15px
  left 15px
  z-index 5
  .search_input
    height 30px
    border-radius 3px
    background-color #f1f1f1
    text-align center
    line-height 30px
    color #b4b4b4
    .icon-search
      display inline-block
      width 30px
      height 30px
      background url("../../img/nav_icon_search@2x.png") no-repeat center
      background-size 16px
      vertical-align bottom

.slider_box
  width 100%
  height 320px
  overflow hidden
  .slider_container
    width 400%
    transition all .5s
    transform translateX(0)
    &:after
      content ''
      display block
      visibility hidden
      height 0
      clear both
      
.slider_block
  float left
  width 375px
  height 320px
  background url("../../img/banner_img@2x.png") no-repeat center
  background-size cover
  &:nth-child(2)
    background url("../../img/banner_img@3x.jpg") no-repeat center
    background-size cover
  &:nth-child(3)
    background url("../../img/banner_img@2x.png") no-repeat center
    background-size cover
  &:nth-child(4)
    background url("../../img/banner_img@3x.jpg") no-repeat center
    background-size cover
.point_box
  position relative
  top -30px
  z-index 5
  height 16px
  text-align center
  .point_block
    display inline-block
    width 16px
    height 16px
    background url("../../img/banner_icon_point_nor@2x.png") no-repeat center
    background-size 10px
    &.active
      background url("../../img/banner_icon_point_press@2x.png") no-repeat center
      background-size 10px

.query_box
  display flex
  width 100%
  height 50px
  margin-top 10px
  background-color #fff
  border-bottom 1px solid #d6d7dc
  .query_block
    flex 1
    color #646464
    background url("../../img/content_icon02_nor@2x.png") no-repeat top 30px center
    background-size 12px
    &.active
      color #ea5404
      background url("../../img/content_icon02_press@2x.png") no-repeat top 30px center
      background-size 12px
    &:after
      content ''
      position relative
      display block
      width 1px
      height 50%
      background-color #d6d7dc
      float right
      top -28px

    .text
      font-size 15px
      display block
      height 35px
      text-align center
      line-height 35px

    .icon
      display block
      height 5px


  .query_price
    width 50px
    height 50px
    background url("../../img/content_icon01_nor@2x.png") no-repeat center
    background-size 50%
    &.active-down
      background url("../../img/content_icon01_down@2x.png") no-repeat center
      background-size 50%
    &.active-up
      background url("../../img/content_icon01_litre@2x.png") no-repeat center
      background-size 50%

.block_box
  display flex
  padding 12px
  background-color #ffffff
  margin-top 5px
  .img_box
    flex 3
    background url("../../img/content_img_list@2x.png") no-repeat center
    background-size 128px 90px
  .info_box
    flex 5
    padding 5px 10px
    width 100%
    .info-title
      font-size 21px
      &:after
        content ''
        display block
        background url("../../img/collect_icon_nor@2x.png") no-repeat center
        background-size 70%
        width 28px
        height 26px
        float right




    .info-address
      font-size 14px
      line-height 25px
      color #646464
    .info-tag_box
      span
        border 1px solid #ea5404
        border-radius 5px
        display block
        color #ea5404
        font-size 14px
        width 4em
        padding 3px 8px
    .info-price
      font-size 12px
      color #727272
      line-height 25px
      em
        font-style normal
        color #ea5404
        font-size 20px
      .price-text
        text-align right
        display inline-block
        width 55%





.down-box
  display none

